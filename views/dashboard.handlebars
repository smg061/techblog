{{#each userPosts as |post|}}
  <!-- Post card starts -->
  <section class="py-4">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 mx-auto">
          <blockquote class="blockquote blockquote-custom bg-white p-5 shadow rounded" >
            <h2 class="card-title">{{post.title}}</h2>
            <p class="mb-0 mt-2 font-italic">"{{post.body}}"</p>
            <footer class="blockquote-footer pt-4 mt-4 border-top">
              Posted:
              {{format_date post.createdAt}}
              Last Updated:
              {{format_date post.updatedAt}}
              <div>
                <a href="/post/{{post.post_id}}">See comments</a>
              </div>
            </footer>
          </blockquote><!-- END -->
        </div>
      </div>
    </div>
  </section>
</section>
  <!-- post card ends -->

{{/each}}


<!--button that controls the display of the form -->
<div style="margin-left: 0.7rem; margin-top:2rem; margin-bottom:2rem">
<button type="button" class="btn btn-primary btn-lg" id="displayPostForm">+ New Post</button>
</div>

<!--submit post form -->
<form id="postForm" style="display: none;">
  <!-- title input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form4Example1">Title</label>
    <input type="text" id="postTitle" class="form-control" />
  </div>

  <!-- Message input -->
  <div class="form-outline mb-4">
     <label class="form-label" for="form4Example3">Content</label>
    <textarea class="form-control" id="postBody" rows="4"></textarea>
  </div>
<button type="button" class="btn btn-primary" id="addPost">+ Add a Post</button>
<button type="button" class="btn btn-danger" id="cancelPost">Cancel</button>

</form>

